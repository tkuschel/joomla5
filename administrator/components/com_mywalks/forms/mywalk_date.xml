<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="details" label="COM_MYWALKS_MYWALK_DATE_TAB_DETAILS">
		<field
			name="id"
			type="number"
			label="COM_MYWALKS_MYWALK_DATE_LABEL_ID"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="date"
			type="calendar"
			label="COM_MYWALKS_MYWALK_DATE_LABEL_DATE"
			default="0"
		/>

		<field
			name="weather"
			type="text"
			label="COM_MYWALKS_MYWALK_DATE_LABEL_WEATHER"
			size="40"
		 />
		 
		<field
			name="walk_id"
			type="number"
			label="COM_MYWALKS_MYWALK_DATE_LABEL_WALK_ID"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
</form>
